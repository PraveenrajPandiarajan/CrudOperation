@model CrudOperation.Core.Model.Student;
@{
    Layout = null;
}

<head>

    <title>Registration Form</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="~/js/site.js"></script>
    <style>


        body {
            margin-top: 30px;
            margin-bottom: 30px;
            margin-right: 25%;
            margin-left: 25%
        }

        .error {
            color: red;
        }

    </style>
    <script>
        $().ready(function () {
            $("#basic").validate({
                rules: {
                    First_Name: {
                        required: true,
                        minlength: 10 //for length of lastname
                    },

                    Address: {
                        required: true,
                        minlength: 5,
                    },
                    Last_Name: {
                        required: true,
                        minlength: 5
                    }

                },
                // in 'messages' user have to specify message as per rules
                messages: {
                    First_Name: {
                        required: " Please enter a FirstName",
                        minlength: " Your username must consist of at least 10 characters"
                    },
                    Address: {
                        required: " Please enter a Address",
                        minlength: " Your username must consist of at least 10 character"
                    },
                    Last_Name: {
                        required: " Please enter a LastName",
                        minlength: " Your username must consist of at least 5 characters"
                    }

                }
            });
        });


        function Submit() {
            debugger
            if ($("#basic").validate()) {
                debugger
                $("#basic").submit();
            }
        }
    </script>

</head>
@*<form method="get" action="@Url.Action("Next", "Student")" >*@
@using (Html.BeginForm("Next", "Student", FormMethod.Post, new { @id = "basic" }))
{
    <body>
        <h1 style="padding-bottom:30px;text-align:center">STUDENT REGISTRATION FORM</h1>
        <!--Create textbox and validation for Student Registration Form-->
        <!--Textbox for First Name-->
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">First Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.First_Name,new{@placeholder="First Name"})<br>
                @Html.ValidationMessageFor(model => model.First_Name,"", new {@class="error",style="font-size:13px"})
            </div>
        </div>
        <!--Textbox for Middle Name-->
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Middle Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Middle_Name,new{@placeholder="Middle Name"})<br>
                @Html.ValidationMessageFor(model => model.Middle_Name,"", new {@class="error",style="font-size:13px"})
            </div>
        </div>
        <!--Textbox for Last Name-->
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Last_Name,new{@placeholder="Last Name"})<br>
                @Html.ValidationMessageFor(model => model.Last_Name,"", new {@class="error",style="font-size:13px"})
            </div>
        </div>
        <!--Dropdown for Course-->
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Course</label>
            <div class="col-sm-10">
                @Html.DropDownList("Course", new List<SelectListItem>
            {
            new SelectListItem{ Text="BSC"},
            new SelectListItem{ Text="MCA"},
            new SelectListItem{ Text="BE"},
            }, "----Select List----")

            </div>
        </div>
        <!--Radiobutton for Gender-->
        
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Gender</label>
            <div class="col-sm-10">
                <label> @Html.RadioButtonFor(m => m.Gender,"Male")Male</label>
                <label>@Html.RadioButtonFor(m => m.Gender,"Female")Female</label>
                <label>@Html.RadioButtonFor(m => m.Gender,"Others")Others</label>
            </div>
        </div>
      
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Phone No</label>
            <div class="col-sm-10 ">
                <div class="form-group input-group">
                    <select class="custom-select" style="max-width: 120px;">
                        <option selected="">+91</option>
                        <option value="1">+61</option>
                        <option value="2">+57</option>
                        <option value="3">+47</option>
                    </select>
                    @Html.TextBoxFor(model => model.Phone,new{@placeholder="Phone Number"})
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <label for="inputPassword" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">

                @Html.TextAreaFor(model => model.Address,  new { style="width:600px;",@placeholder="Address"})<br>
                @Html.ValidationMessageFor(model => model.Address,"", new {@class="error",style="font-size:13px"})
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Email_Id,new{@placeholder="Email"})<br>
                @Html.ValidationMessageFor(model => model.Email_Id,"", new {@class="error",style="font-size:13px"})
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                @Html.PasswordFor(modle => Model.Password, new{id="password",@placeholder="password"})<br>
                @Html.ValidationMessageFor(model => model.Password,"", new {@class="error",style="font-size:13px"})<br>
                <input type="checkbox" onclick="myFunction()">Show Password

            </div>
        </div>
        <div class="row mb-3">
            <label for="inputPassword" class="col-sm-2 col-form-label">Re-type Password</label>
            <div class="col-sm-10">
                @Html.PasswordFor(model => model.Retype_Password , new {id="Retype_Password",@placeholder="Retype_password"})<br>
                @Html.ValidationMessageFor(model => model.Retype_Password,"", new {@class="error",style="font-size:13px"})<br>
                <input type="checkbox" onclick="myRetype()">Show Retype_Password
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-success">Submit</button>
                
                <input type="button" value="Read" onclick="location.href='@Url.Action("Result", "Student")'"style="color:green; height:36px; width:70px;" />
               
                @* @Html.ActionLink("Go to Read",
            "Result",
            "Student"
            )*@

            </div>
        </div>
        
        
    </body>
    @*</form>*@
}